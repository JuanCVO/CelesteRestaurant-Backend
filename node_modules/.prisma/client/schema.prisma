generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         Int         @id @default(autoincrement())
  name       String
  category   String
  price      Decimal     @db.Decimal(10, 2)
  stock      Int
  createdAt  DateTime    @default(now())
  orderItems OrderItem[]
  Sale       Sale[]
}

model Pedido {
  id        Int         @id @default(autoincrement())
  table     String
  createdAt DateTime    @default(now())
  total     Decimal     @db.Decimal(10, 2)
  tip       Decimal?    @db.Decimal(10, 2)
  isClosed  Boolean     @default(false)
  items     OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  subtotal  Decimal @db.Decimal(10, 2)
  product   Product @relation(fields: [productId], references: [id])
  pedido    Pedido  @relation(fields: [orderId], references: [id])
}

model Sale {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  total     Decimal  @db.Decimal(10, 2)
  date      DateTime @default(now())
}

model CierreDiario {
  id              Int      @id @default(autoincrement())
  fecha           DateTime @default(now())
  totalVentas     Decimal  @db.Decimal(10, 2)
  totalPropinas   Decimal  @db.Decimal(10, 2)
  pedidosCerrados Int
}
